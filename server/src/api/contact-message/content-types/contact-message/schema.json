{
  "kind": "collectionType",
  "collectionName": "contact_messages",
  "info": {
    "singularName": "contact-message",
    "pluralName": "contact-messages",
    "displayName": "Contact Message",
    "description": "Messages sent through the contact form"
  },
  "options": {
    "draftAndPublish": false,
    "timestamps": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string",
      "maxLength": 20
    },
    "subject": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "message": {
      "type": "text",
      "required": true,
      "maxLength": 2000
    },
    "company": {
      "type": "string",
      "maxLength": 100
    },
    "is_read": {
      "type": "boolean",
      "default": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["new", "in_progress", "resolved", "closed"],
      "default": "new"
    },
    "priority": {
      "type": "enumeration",
      "enum": ["low", "medium", "high", "urgent"],
      "default": "medium"
    },
    "admin_notes": {
      "type": "text"
    }
  }
}
