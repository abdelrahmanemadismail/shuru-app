# Server
HOST=0.0.0.0
PORT=1337
APP_KEYS=your-app-keys-here
API_TOKEN_SALT=your-api-token-salt
ADMIN_JWT_SECRET=your-admin-jwt-secret
TRANSFER_TOKEN_SALT=your-transfer-token-salt
JWT_SECRET=your-jwt-secret

# Database
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# Email Configuration
EMAIL_PROVIDER=strapi-provider-email-sendmail
EMAIL_PROVIDER_OPTIONS={}
DEFAULT_FROM=noreply@shuru.com
ADMIN_EMAILS=admin@shuru.com

# URLs - CRITICAL FOR OAUTH
CLIENT_URL=http://localhost:3000
STRAPI_URL=http://localhost:1337

# Production URLs (uncomment for production):
# CLIENT_URL=https://your-frontend-domain.com
# STRAPI_URL=https://your-strapi-domain.com

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-oauth-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-oauth-client-secret

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_ACCESS_SECRET=your-aws-secret-access-key
AWS_REGION=your-aws-region
AWS_BUCKET_NAME=your-s3-bucket-name